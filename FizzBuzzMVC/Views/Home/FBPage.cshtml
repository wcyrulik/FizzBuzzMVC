@model FizzBuzzMVC.Models.FizzBuzz

<div class="container mt-5">
    <div class="row row-cols-1 row-cols-lg-2">
        <div class="col border-end border-5 " ">
            <h1 class="mb-4">THE FIZZBUZZ: A Coding Project</h1>
            <h4 class="lead">
                When it counts you Fizz Buzz  A javascript coding
                exercise using loops.  Write a program that that prints the
                numbers from 1 to 100 and for numbers that are multiples
                of 3, display <strong>'Fizz'</strong> instead of the number.  If the number
                is a multiple of 5, display <strong>'Buzz</strong> and if the
                number is a multiple of both, display <strong>'FizzBuzz'.</strong>
            </h4>
            <h2 class="mt-5 border-bottom border-5">Instructions</h2>
            <p>
                Enter a Fizz value and a Buzz value. Press
                the button and the results will appear.
            </p>
        </div>
        <div class="col">
            <div>
                <h5>Enter Numbers</h5>
                @* Form goes here *@
                <form asp-action="FBPage" asp-controller="Home" method="post">
                    <div class="form-group">
                        <label asp-for="FizzValue">Fizz Value</label>
                        <input asp-for="FizzValue" class="form-control"
                               placeholder="Enter Fizz Value"
                               value="@Model.FizzValue" type="number" />
                    </div>
                    <div class="form-group">
                        <label asp-for="BuzzValue">Buzz Value</label>
                        <input asp-for="BuzzValue" class="form-control"
                               placeholder="Enter Buzz Value"
                               value="@Model.BuzzValue" type="number" />
                    </div>
                    <button id="btnSubmit" type="submit" class="btn btn-dark mt-2">Submit</button>
                </form>
                <h2 class="mt-5 border-bottom border-2">Results</h2>
                <div class="table-responsive">
                    @* Table goes here *@
                    @if (Model.Result.Count > 0)
                    {
                        <table class="table-striped table-hover table table-dark">
                            <thead>
                                <tr><th colspan="5">Fizz Buzz Results</th></tr>
                            </thead>
                            @for (int i = 0; i < Model.Result.Count(); i += 5)
                            {
                                <tr>
                                    <td>@Model.Result[i]</td>
                                    <td>@Model.Result[i + 1]</td>
                                    <td>@Model.Result[i + 2]</td>
                                    <td>@Model.Result[i + 3]</td>
                                    <td>@Model.Result[i + 4]</td>

                                </tr>
                            }
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
